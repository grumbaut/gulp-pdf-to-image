{
  "name": "gulp-pdf-to-image",
  "version": "0.1.0",
  "description": "Gulp plugin to split a PDF into separate image files.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "dev": "npm run build -- --watch",
    "build": "tsc --declaration",
    "prepare": "npm run build",
    "release": "standard-version -a",
    "release:dryrun": "npm run release -- --dry-run",
    "npm:publish": "npm run release && npm publish"
  },
  "directories": {
    "lib": "lib"
  },
  "author": "Gabriel Rumbaut",
  "license": "MIT",
  "dependencies": {
    "canvas": "^2.6.1",
    "pdfjs-dist": "^2.4.456",
    "plugin-error": "^1.0.1",
    "vinyl": "^2.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/pdfjs-dist": "^2.1.5",
    "@types/plugin-error": "^0.1.1",
    "@types/through2": "^2.0.36",
    "@types/vinyl": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "eslint": "^7.5.0",
    "husky": "^4.2.5",
    "standard-version": "^8.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
